#------------------------------------------------------------------------------#
# We can use any Linux that has debootstrap as a package.
# Ideally we want the smallest that has up to date
# repository keys for our final target
#
# Alpine is very small, but only has a Debian keyring.
FROM alpine AS unpack
RUN apk add perl debootstrap

ARG RELEASE=potato
ARG ARCH=i386
ARG MIRROR=http://archive.debian.org/debian
ARG DEBSCRIPT
ARG DEBOPTIONS

WORKDIR /opt
# Chroot under Docker is unreliable; use --foreign as a workaround.
RUN COMP="--components=main,contrib,non-free";\
    debootstrap --foreign --arch=$ARCH $COMP $DEBOPTIONS \
    "$RELEASE" chroot $MIRROR $DEBSCRIPT

WORKDIR /opt/chroot

# It tries to mount proc, nope!
RUN sed -i -e 's/  setup_proc/#setup_proc/' debootstrap/suite-script

# Current debootstrap has bug
RUN sed -i -e 's/echo \${USE_COMPONENTS}/echo "\{USE_COMPONENTS}"/' debootstrap/functions


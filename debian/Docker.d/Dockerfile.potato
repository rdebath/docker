#------------------------------------------------------------------------------#
FROM scratch AS stage2
COPY --from=unpack /opt/chroot /
ARG DEBIAN_FRONTEND=noninteractive
ARG RELEASE
ARG ARCH

RUN set -x;\
 : $RELEASE $ARCH; /debootstrap/debootstrap --second-stage \
|| dpkg --configure --pending \
;  dpkg -l dpkg apt base-files

# Clear all the manual install flags
RUN [ ! -f /usr/bin/apt-mark ] || apt-mark auto -qq $(apt-mark showmanual) ||:

# This option breaks some installs eg: ubuntu/maverick
RUN dpkg --force-unsafe-io -l dpkg >/dev/null 2>&1 && \
    sed -i -e '/^#<off> force-unsafe-io/s/#[^ ]* //' \
        /etc/dpkg/dpkg.cfg.d/docker-apt-speedup ||:

# Clean lists, cache and history.
RUN apt-get update -qq --list-cleanup -oDir::Etc::SourceList=/dev/null
RUN apt-get clean
RUN dpkg --clear-avail
RUN rm -f /etc/apt/apt.conf.d/01autoremove-kernels
RUN rm -f /var/lib/dpkg/*-old
RUN :|find /var/log -type f ! -exec tee {} \;
RUN [ ! -x /usr/bin/dselect ] || dselect update

#------------------------------------------------------------------------------#
# Finally squash all the layers.
FROM scratch
COPY --from=stage2 / /
WORKDIR /root
CMD ["bash"]
